<div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
  <div class="all-meal">
    <div class="top">
      <div class="top-img">
        <%= link_to category_product_path(product.category.id,product) do %>
          <%= image_tag product.images.first%>
        <% end %>
      </div>
      <div class="logo-img">
        <%= link_to category_path(product.category) do %>
          <%= image_tag product.category.image %>
        <% end %>
      </div>
      <div class="top-text">
        <div class="sub-heading">
          <h5>
            <%= link_to category_product_path(product.category.id,product) do %>
              <%= product.name_product%>
            <% end %>
          </h5>
          <p>$<%= product.price %></p>
        </div>
      </div>
    </div>
    <div class="bottom">
      <div class="bottom-text">
        <div class="delivery"><i class="fas fa-shopping-cart"></i>Delivery Free : Free</div>
        <div class="time"><i class="far fa-clock"></i>Delivery Time : 30 Min</div>
        <div class="star">
          Rating
          <span>4.5</span>
          <div class="comments"><a href="#"><i class="fas fa-comment-alt"></i><%=%></a></div>
        </div>
      </div>
    </div>
  </div>
</div>