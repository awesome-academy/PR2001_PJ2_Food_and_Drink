

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
	<div class="container padding-bottom-3x mb-2 mt-5">
	    <div class="row justify-content-center">
	        <div class="col-lg-8 col-md-10">
	            <div class="forgot">
                <h2>Resend unlock instructions</h2>
	            </div>
              <form class="card mt-4">
                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form_control",placeholder:"Enter your email" %>
                  </div>
                  <div class="actions">
                    <%= f.submit "Resend unlick instructions",class:"btn btn-primary btn-lg active" %>
                </div>
                <div class="form-group">
                <%= link_to "Back to Login", signin_path %> 
                </div>
              <% end %>
              </form>
              </div>
	        </div>
	    </div>
	</div>