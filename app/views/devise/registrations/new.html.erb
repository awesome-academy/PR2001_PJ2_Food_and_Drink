<section class="login_register">			
    <div class="container">					
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-6 col-12">
                <h1>Sign Up</h1>
                <div class="login-container">
                    <div class="row">			
                        <div class="col-lg-12 col-md-12 col-12">
                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                <div class="login-form">	
                                    <%= render "devise/shared/error_messages", resource: resource %>
                                            
                                    <div class="form-group">
                                        <%= f.label :Name %>
                                        <%= f.text_field :username , class:"video-form" ,id:"fullName", placeholder:"Full Name" %>
                                    </div>
                                    <div class="form-group">
                                      <%= f.label :Birth%>
                                      <%= f.date_field :birth, class: 'form-control'%>
                                    </div>

                                    <div class="form-group form-check-inline">
                                          <%= f.label :Men, class: "form-check-label"%>
                                          <%= f.radio_button :gender, "women", class:"form-check-input"%><br>
                                          <%= f.label :Women, class: "form-check-label"%>
                                          <%= f.radio_button :gender, "men", class:"form-check-input"%><br>
                                          <%= f.label :Other, class: "form-check-label"%>
                                          <%= f.radio_button :gender, "other", class:"form-check-input"%><br>
                                      </div>

                                    <div class="form-group">
                                        <%= f.label :email %><br />
                                        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"video-form" ,id:"emailAddress" ,placeholder:"Email Address" %>
                                    </div>

                                    <div class="form-group">
                                        <%= f.label :password %>
                                        <% if @minimum_password_length %>
                                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                                        <% end %><br />
                                        <%= f.password_field :password, autocomplete: "new-password",class:"video-form" ,id:"password1" ,placeholder:"Password" %>
                                    </div>
        
                                    <div class="form-group">
                                        <%= f.label :password_confirmation %><br>
                                        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"video-form" ,id:"password1" ,placeholder:"Password" %>
                                    </div>
        
                                    <div class="actions">
                                        <%= f.submit "Sign up",class:"login-btn btn-link" %>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




