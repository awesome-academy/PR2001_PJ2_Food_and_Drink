<tr>
  <td><%= index +1 %></td>
  <td><%= topping.name %></td>
  <td><%= topping.price %></td>
  <td><%= topping.type %></td>
  <td>
    <%= link_to admin_category_product_path(@category,product) do %>
      <i class='fas fa-edit' style='color: black'></i>
    <% end %>
    <%= link_to edit_admin_category_product_path(@category, product) do %>
      <i class='fas fa-wrench' style='color: black'></i>
    <% end %>
    <%= link_to admin_category_product_path(@category, product), remote: true, method: :delete, data: {confirm: "Are you sure?"}, class:"delete-product" do %>
      <i class='far fa-trash-alt' style='color: black'></i>
    <% end %>
  </td>
</tr>