<section class="content">
  <div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <div class="row">
      <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
          <div class="inner">
            <h3 class="counter"><%= @order_count %></h3>
            <p>Orders</p>
          </div>
          <div class="icon">
            <i class="ion ion-stats-bars"></i>
          </div>
          <%= link_to admin_orders_path, class:"small-box-footer" do %>
            More info <i class="fas fa-arrow-circle-right"></i>
          <% end %>
        </div>
      </div>
      <!-- ./col -->
      <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
          <div class="inner">
            <h3 class="counter"><%= @category_count %></h3>
            <p>Categories</p>
          </div>
          <div class="icon">
            <i class="ion ion-bag"></i>
          </div>
          <%= link_to admin_categories_path, class:"small-box-footer" do %>
            More info <i class="fas fa-arrow-circle-right"></i>
          <% end %>
        </div>
      </div>
      <!-- ./col -->
      <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
          <div class="inner">
            <h3 class="counter"><%= @product_count %></h3>
            <p>Products</p>
          </div>
          <div class="icon">
            <i class="ion ion-bag"></i>
          </div>
          <%= link_to admin_products_path, class:"small-box-footer" do %>
            More info <i class="fas fa-arrow-circle-right"></i>
          <% end %>
        </div>
      </div>
      <!-- ./col -->
      <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
          <div class="inner">
            <h3 class="counter"><%= @user_count %></h3>
            <p>User Registrations</p>
          </div>
          <div class="icon">
            <i class="ion ion-person-add"></i>
          </div>
          <%= link_to admin_users_path, class:"small-box-footer" do %>
            More info <i class="fas fa-arrow-circle-right"></i>
          <% end %>
        </div>
      </div>
    </div>
    </div>
    <div>
    <%= form_tag(admin_search_path, method: "get", remote: true, id: "search-form-chart") do %>
       <%= select_tag "filter", options_for_select(['Day',
                                                    'Week',
                                                    'Month']), id: "select-period",class:"form-control" %>
       <%= submit_tag "search", id:'search_submit' ,style: 'display:none'%>
    <% end %>
  </div>
    <div id="graph-container">
    <%= render 'graph', data: @data %>
    </div>
  </section>
  <script>
  $("#select-period").on("change", function(){
    $.ajax({
      type: "get",
      url: "search",
      data: {filter: $(this).val()},
      dataType: "script",
    })
  })
</script>
