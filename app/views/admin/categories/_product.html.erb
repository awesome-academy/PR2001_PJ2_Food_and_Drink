
<tr>
  <td><%= index +1 %></td>
  <td><%= product.name_product %></td>
  <td><%= product.information %></td>
  <td><%= product.price %></td>
  <td><%= product.kind %></td>
  <td>
    <%= link_to "#" do %>
      <i class='fas fa-edit' style='color: black'></i>
    <% end %>
    <%= link_to "#" do %>
      <i class='fas fa-wrench' style='color: black'></i>
    <% end %>
    <%= link_to admin_category_product_path(product.category, product), method: :delete, data: {confirm: 'Are you sure?', remote: true }, class:"delete-product" do %>
      <i class='far fa-trash-alt' style='color: black'></i>
    <% end %>
  </td>
</tr>
