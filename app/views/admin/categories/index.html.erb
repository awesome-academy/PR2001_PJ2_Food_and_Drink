<div class="container">
  <!-- Button to Open the Modal -->
  <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal">
    Create category
  </button>

  <!-- The Modal -->
  <div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Create</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <%= form_for :category, url: admin_categories_path do |f|%>
          <div class="modal-body">
           <div class="custom-file">
              <b>Avata</b>
              <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
              <%= f.file_field :image, class:"custom-file-input", id:"validatedCustomFile"%>
            </div>
            <div class="form-group">
              <label>Name</label>
              <%= f.text_field :name, class:"form-control" , placeholder:"Enter ..." %>
            </div>
          </div>
          
          <!-- Modal footer -->
          <div class="modal-footer">
            <div class="form-group">
              <%= f.submit "Generate", class:"btn btn-outline-warning"%>
             </div>
          </div>         
        <% end %>
      </div>
    </div>
  </div>
  
</div>
  <div class="card">
  <!-- /.card-header -->
  <div class="card-body">
    <div class="container">
      <table id="example" class="table" style="width: 1000px;">
        <thead>
          <tr>
            <th>ID</th>
            <th> Avatar</th>
            <th>Name Category</th>
            <th> Action </th>
            <th> Show Detail </th>
          </tr>
        </thead>
        <tbody>  
            <% @categories.each_with_index  do |category, index| %>
              <%= render 'category', category: category, index: index %>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
